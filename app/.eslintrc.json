{
  "extends": "../.eslintrc.json",
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["**/tsconfig.app.json"],
        "createDefaultProgram": true
      },
      "rules": {
        "@angular-eslint/directive-selector": ["error", {"type": "attribute", "prefix": "twa", "style": "camelCase"}],
        "@angular-eslint/component-selector": ["error", {"type": "element", "prefix": "twa", "style": "kebab-case"}]
      }
    }
  ]
}
